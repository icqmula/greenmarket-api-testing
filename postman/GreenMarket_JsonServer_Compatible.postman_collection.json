      "name": "1. Gestión de Usuarios",
      "item": [
        {
          "name": "CP-001: Crear Usuario (POST)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code es 201 Created\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Content-Type es application/json\", function () {",
                  "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
                  "});",
                  "",
                  "pm.test(\"Response contiene id del usuario\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property(\"id\");",
                  "    pm.collectionVariables.set(\"user_id\", jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Email está en la respuesta\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.email).to.equal(\"juan.perez@greenmarket.com\");",
                  "});",
                  "",
                  "pm.test(\"Tiempo de respuesta menor a 2000ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Pérez\",\n  \"email\": \"juan.perez@greenmarket.com\",\n  \"phone\": \"+56912345678\",\n  \"address\": \"Av. Principal 123, Santiago\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "CP-002: Listar Usuarios (GET)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code es 200 OK\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response es un array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Cada usuario tiene campos requeridos\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.length > 0) {",
                  "        pm.expect(jsonData[0]).to.have.property(\"id\");",
                  "        pm.expect(jsonData[0]).to.have.property(\"name\");",
                  "        pm.expect(jsonData[0]).to.have.property(\"email\");",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
